<Window x:Class="Morphology.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Morphology"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        mc:Ignorable="d"
        Title="Morphology" Height="800" Width="1200">

    <Window.Resources>
        <CollectionViewSource x:Key="sortedRegions" Source="{Binding}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Name" Direction="Ascending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="26"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.ColumnSpan="2">
            <Label 
                Margin="10, 0" 
                VerticalAlignment="Center" 
                Content="{Binding Path=Folder, FallbackValue=Select a folder containing VaM morph files}"/>
            <Button 
                Name="OpenFolder" 
                Margin="10, 0" 
                Padding="10, 6"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Click="OnOpenFolder">
                Select Morph Folder
            </Button>
        </Grid>

        <Grid Grid.Row="1" >
            <Label Margin="10, 0" Content="Installed Regions"/>
            <Button 
                Name="SaveButton" 
                Margin="10, 0"
                Padding="10, 2"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Click="OnSave">
                Refresh
            </Button>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Label Margin="10, 0" Content="{Binding ElementName=regionsListBox, Path=SelectedItem.Name}"/>
        </Grid>

        <Grid Grid.Row="2">
            <ListBox 
                Name="regionsListBox"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                ItemsSource="{Binding Source={StaticResource sortedRegions}}"
                IsSynchronizedWithCurrentItem="True"
                Margin="10">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="6"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid 
                            Background="WhiteSmoke"
                            AllowDrop="True" 
                            Drop="Region_Drop"
                            DragEnter="Region_DragEnter"
                            DragLeave="Region_DragLeave">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>
                            <Grid 
                                Grid.RowSpan="2" 
                                Margin="0,0,10,0" 
                                Background="LightGray" 
                                Width="10" 
                                Height="50" 
                                HorizontalAlignment="Left" />
                            <TextBlock Name="Region" Grid.Column="1" FontSize="16" VerticalAlignment="Center" Text="{Binding Name}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Info}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1">
            <ListBox 
                Margin="10" 
                Name="MorphList"
                SelectionMode="Extended"
                IsSynchronizedWithCurrentItem="True"
                PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                ItemsSource="{Binding ElementName=regionsListBox, Path=SelectedItem.Morphs}">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="6"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="WhiteSmoke" Height="50">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>
                            <TextBlock FontSize="16" Margin="10, 0" VerticalAlignment="Center" Text="{Binding DisplayName}"/>
                            <TextBlock Grid.Row="1" Margin="10, 0" Text="{Binding ID}"/>
                            <TextBlock Grid.Row="1" Margin="10, 0" HorizontalAlignment="Right" Text="{Binding Filepath}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>